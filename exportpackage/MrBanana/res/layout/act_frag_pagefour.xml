    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.mrbanana.MainActivity$PlaceholderFragment" >

    <ImageView
        android:id="@+id/act_frag_pagefourIvImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ccc"
        android:scaleType="centerCrop"
        android:src="@drawable/pagefour" />

    <TextView
        android:id="@+id/act_frag_pagefourTvBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
