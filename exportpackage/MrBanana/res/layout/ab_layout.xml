<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ab_lRlScreenParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4" >

    <LinearLayout
        android:id="@+id/ab_llHeaderWrapper"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ab_lTvCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/hl_black_translucent"
            android:gravity="center"
            android:padding="5dp"
            android:text="Cancel"
            android:textColor="@color/hl_white"
            android:textSize="18sp" />
    </LinearLayout>

    <fragment
        android:id="@+id/ab_lmap"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ab_llBottomBarWrapper"
        android:layout_below="@id/ab_llHeaderWrapper" />

</RelativeLayout>