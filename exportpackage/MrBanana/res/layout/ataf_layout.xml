<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ataf_lRlScreenParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8" >

    <ScrollView
        android:id="@+id/ataf_lSv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:id="@+id/ataf_lscrollviewchild"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/ataf_lLlHeaderBarWrapper"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ataf_lTvBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Accounts"
                    android:textColor="#3791FD"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ataf_lTvOr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" Invite Friends  "
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:id="@+id/ataf_lVGreyDivider1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/ataf_lLlHeaderBarWrapper"
                android:background="#F0F0F1" />

            <LinearLayout
                android:id="@+id/ataf_lLlInputFeildsWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ataf_lVGreyDivider1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/ataf_lTvHeaderTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Invite Friends to Mr Banana by..."
                    android:textSize="18sp" />

                <View
                    android:id="@+id/ataf_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <RelativeLayout
                    android:id="@+id/ataf_lLlEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff" >

                    <ImageView
                        android:id="@+id/ataf_lIvEmailIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/ataf_lTvEmailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/ataf_lIvEmailIcon"
                        android:text="Email"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ataf_lTvEmailValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/ataf_lTvEmailArrow"
                        android:text=""
                        android:textColor="#B5B5B5"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ataf_lTvEmailArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text=">"
                        android:textColor="#B5B5B5"
                        android:textSize="30sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/ataf_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <RelativeLayout
                    android:id="@+id/ataf_lLlSMS"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff" >

                    <ImageView
                        android:id="@+id/ataf_lIvSMSIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/ataf_lTvSMSText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/ataf_lIvSMSIcon"
                        android:text="SMS"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ataf_lTvSMSValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/ataf_lTvSMSText"
                        android:text=""
                        android:textColor="#B5B5B5"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/ataf_lTvSMSArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text=">"
                        android:textColor="#B5B5B5"
                        android:textSize="30sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/ataf_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <RelativeLayout
                    android:id="@+id/ataf_lLlTwitter"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff" >

                    <ImageView
                        android:id="@+id/ataf_lIvTwitterIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/ataf_lTvTwitterText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/ataf_lIvTwitterIcon"
                        android:text="Social Network Share"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ataf_lTvTwitterValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/ataf_lTvTwitterText"
                        android:text=""
                        android:textColor="#B5B5B5"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/ataf_lTvTwitterArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text=">"
                        android:textColor="#B5B5B5"
                        android:textSize="30sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/ataf_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/ataf_lLlFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/ataf_lIvFacebookIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/ataf_lTvFacebookText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/ataf_lIvFacebookIcon"
                        android:text="Facebook"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ataf_lTvFacebookValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/ataf_lTvFacebookText"
                        android:text=""
                        android:textColor="#B5B5B5"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/ataf_lTvFacebookArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text=">"
                        android:textColor="#B5B5B5"
                        android:textSize="30sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/ataf_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <TextView
                    android:id="@+id/ataf_lTvBottomTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="These are your contacts not ours "
                    android:textColor="#CECECE"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ataf_lTvBottomTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="And we respect that."
                    android:textColor="#CECECE"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>