<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.mrbanana.MainActivity$PlaceholderFragment" >

    <ImageView
        android:id="@+id/act_frag_pagethreeIvImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#89DBFC"
        android:scaleType="fitCenter"
        android:src="@drawable/pagethree" />

    <TextView
        android:id="@+id/act_frag_pagethreeTvBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Mr Banana app picks up your location from the registration details "
        android:textSize="17sp" />

    <TextView
        android:id="@+id/act_frag_pagethreeTvSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="We will always send the tradesmen at your registered address only"
        android:textSize="14sp" />

</LinearLayout>