<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/av_lRlScreenParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8" >

    <ScrollView
        android:id="@+id/av_lSv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:id="@+id/av_lscrollviewchild"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/av_lLlHeaderBarWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/av_lTvBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="Back"
                    android:textColor="#3791FD"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/av_lTvOr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=" Verify "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/av_lTvNewUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text="Resend SMS"
                    android:textColor="#3791FD"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/av_lLlInputFeildsWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/av_lLlHeaderBarWrapper"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <View
                    android:id="@+id/av_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <TextView
                    android:id="@+id/av_lTvHeaderTxt"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Enter 3 digit code from sms"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/av_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <EditText
                    android:id="@+id/av_lEtCode"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:hint=""
                    android:padding="10dp"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/av_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />
            </LinearLayout>

            <TextView
                android:id="@+id/av_lTvSmsSentToText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/av_lLlInputFeildsWrapper"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="SMS sent to "
                android:textSize="18sp" />

            <Button
                android:id="@+id/av_lBtnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/av_lTvSmsSentToText"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_act_fragseven_getstartedbtn"
                android:text="Continue" />

            <Button
                android:id="@+id/av_lBtnSkip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/av_lBtnContinue"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_act_fragseven_getstartedbtn"
                android:text="Skip" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>