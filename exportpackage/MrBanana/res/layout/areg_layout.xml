<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/areg_lRlScreenParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8" >

    <ScrollView
        android:id="@+id/areg_lSv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:id="@+id/areg_lscrollviewchild"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/areg_lRlHeaderWrapper"
                android:layout_width="match_parent"
                android:layout_height="70dp" >

                <TextView
                    android:id="@+id/areg_lTvHeaderName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="#FEDA47"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Mr Banana"
                    android:textColor="#000"
                    android:textSize="24sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/areg_lLlInputFeildsWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/areg_lRlHeaderWrapper"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <View
                    android:id="@+id/areg_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <LinearLayout
                    android:id="@+id/areg_lLlNameWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/areg_lEtFirstName"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:hint="First Name"
                        android:padding="10dp"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/areg_lVGreyDivider"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#F0F0F1" />

                    <EditText
                        android:id="@+id/areg_lEtLastName"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:hint="Last Name"
                        android:padding="10dp"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:id="@+id/areg_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <EditText
                    android:id="@+id/areg_lEtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:hint="Email Address"
                    android:padding="10dp"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/areg_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <LinearLayout
                    android:id="@+id/areg_lLlMobileWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/areg_lEtMobileCountryCode"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="#fff"
                        android:padding="10dp"
                        android:text="+44"
                        android:textColor="#3791FD"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/areg_lVGreyDivider"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#F0F0F1" />

                    <EditText
                        android:id="@+id/areg_lEtMobile"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#fff"
                        android:hint="Mobile Number"
                        android:inputType="phone"
                        android:padding="10dp"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:id="@+id/areg_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <EditText
                    android:id="@+id/areg_lEtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:hint="Choose a password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/areg_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <EditText
                    android:id="@+id/areg_lEtAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:hint="Address1"
                    android:padding="10dp"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/areg_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <EditText
                    android:id="@+id/areg_lEtAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:hint="Address2"
                    android:padding="10dp"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/areg_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <AutoCompleteTextView
                    android:id="@+id/areg_lEtLocation"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:hint="Location (city,country)"
                    android:padding="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/areg_lTvTACAndPPText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/areg_lLlInputFeildsWrapper"
                android:gravity="center"
                android:text="By continuing you accept the" />

            <LinearLayout
                android:id="@+id/areg_lLlTACAndPPHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/areg_lTvTACAndPPText1"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/areg_lTvTACAndPPText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Terms and Conditions"
                    android:textColor="#3791FD" />

                <TextView
                    android:id="@+id/areg_lTvTACAndPPText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" and " />

                <TextView
                    android:id="@+id/areg_lTvTACAndPPText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Privacy Policy"
                    android:textColor="#3791FD" />
            </LinearLayout>

            <Button
                android:id="@+id/areg_lBtnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/areg_lLlTACAndPPHolder"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_act_fragseven_getstartedbtn"
                android:text="Continue" />

            <RelativeLayout
                android:id="@+id/areg_lLlLoginBtnWrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/areg_lBtnContinue"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:id="@+id/areg_lTvAlreadyHaveAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/areg_lVGreyDivider2"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="Already have an Account ?" />

                <View
                    android:id="@+id/areg_lVGreyDivider2"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_above="@+id/areg_lRlLoginBtnWraapper2"
                    android:background="#F0F0F1" />

                <RelativeLayout
                    android:id="@+id/areg_lRlLoginBtnWraapper2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_above="@+id/areg_lVGreyDivider3"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/areg_lTvLogin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center_vertical"
                        android:text="LOGIN"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/areg_lTvArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:text=">"
                        android:textColor="#888"
                        android:textSize="24sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/areg_lVGreyDivider3"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#F0F0F1" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>