<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ath_lRlScreenParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8" >

    <ScrollView
        android:id="@+id/ath_lSv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:id="@+id/ath_lscrollviewchild"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/ath_lLlHeaderBarWrapper"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ath_lTvBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Accounts"
                    android:textColor="#3791FD"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ath_lTvOr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" Work History  "
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:id="@+id/ath_lVGreyDivider1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/ath_lLlHeaderBarWrapper"
                android:background="#F0F0F1" />

            <LinearLayout
                android:id="@+id/ath_lLlInputFeildsWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ath_lVGreyDivider1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/ath_lTvHeaderTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text=""
                    android:textSize="18sp" />

                <View
                    android:id="@+id/ath_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <RelativeLayout
                    android:id="@+id/ath_lLlCleaningJobWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff" >

                    <ImageView
                        android:id="@+id/ath_lIvCleaningJobIcon"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/ath_lTvCleaningJobText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/ath_lIvCleaningJobIcon"
                        android:text="Cleaning Job"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ath_lTvCleaningJobValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/ath_lTvCleaningJobArrow"
                        android:background="@drawable/round_shape_ath_greycount"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ath_lTvCleaningJobArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text=">"
                        android:textColor="#B5B5B5"
                        android:textSize="30sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/ath_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />

                <RelativeLayout
                    android:id="@+id/ath_lLlPlumbingJobWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff" >

                    <ImageView
                        android:id="@+id/ath_lIvPlumbingJobIcon"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/ath_lTvPlumbingJobText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/ath_lIvPlumbingJobIcon"
                        android:text="Plumbing Job"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ath_lTvPlumbingJobValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/ath_lTvPlumbingJobArrow"
                        android:background="@drawable/round_shape_ath_greycount"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/ath_lTvPlumbingJobArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text=">"
                        android:textColor="#B5B5B5"
                        android:textSize="30sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/ath_lVGreyDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#F0F0F1" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>